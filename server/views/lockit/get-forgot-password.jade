extend /layout

block content
  div.row
    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading 忘記密碼
        div.panel-body
          form(action="/forgot-password", method="POST", autocomplete="off")
            input(type="hidden", name="_csrf", value=_csrf)
            div.form-group
              label(for="email") 電子郵件
              input.form-control(type="email", id="email", name="email", placeholder="請填入您的電子郵件")
              //p #{req.connection.readable}
            if error
              div.alert.alert-warning #{error}
            input(type="submit", class="btn btn-primary btn-block", value="送出")
