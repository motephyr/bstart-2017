extend /layout

block content
  div.row
    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading 註冊
        div.panel-body
          form(action="/signup", method="POST", autocomplete="off")
            input(type="hidden", name="_csrf", value=_csrf)
            div.form-group
              label(for="name") 帳號
              input.form-control(type="text", id="name", name="name", value=name, placeholder="新增帳號")
            div.form-group
              label(for="email") Email
              input.form-control(type="email", id="email", name="email", value=email, placeholder="您的電子郵件")
            div.form-group
              label(for="password") 密碼
              input.form-control(type="password", id="password", name="password", placeholder="數入登入密碼")
            if error
              div.alert.alert-warning #{error}
            input(type="submit", class="btn btn-primary btn-block", value="送出")
          div.text-center(style="margin-top: 15px;")
            small: a(href="/signup/resend-verification") 重發電子郵件
