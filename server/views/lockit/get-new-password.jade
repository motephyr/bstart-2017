extend /layout

block content
  div.row
    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading 密碼更改
        div.panel-body
          form(action="/forgot-password/#{token}", method="POST", autocomplete="off")
            input(type="hidden", name="_csrf", value=_csrf)
            div.form-group
              label(for="password") 密碼
              input.form-control(type="password", id="password", name="password", placeholder="輸入新密碼")
            if error
              div.alert.alert-warning #{error}
            input(type="submit", class="btn btn-primary btn-block", value="送出")
